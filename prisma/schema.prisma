datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(uuid())
  name String 
  github_id Int
  avatar_url String
  login String

  @@map("users")
  messages Message[]
}

model Message {
  id String @id @default(uuid())
  text String
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  @@map("messages")
  user_id String
}